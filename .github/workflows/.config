# 24.10版本的新特性支持
CONFIG_KERNEL_SQUASHFS_XATTR=y
CONFIG_KERNEL_SQUASHFS_ZSTD=y
CONFIG_TARGET_SQUASHFS_BLOCK_SIZE=1024
